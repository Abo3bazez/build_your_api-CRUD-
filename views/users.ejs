<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Winky+Rough:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Winky Rough", sans-serif;
        display: flex;
        place-content: center;
        place-items: center;
        width: 100%;
      }

      .container {
        padding: 5rem 2.5rem;
        width: 100%;
        h1 {
          text-align: center;
          margin-bottom: 1.5rem;
          font-size: 3rem;
        }
        ul {
          display: flex;
          place-content: center;
          li {
            list-style-type: none;
            margin-right: 2.5rem;
            p {
              span {
                text-align: center;
              }
            }
          }
        }
      }
      .users-box {
        margin-top: 2rem;
        display: flex;
        place-content: center;
        place-items: center;
        table {
          width: 100%;
          /* border: 1px solid black; */
          /* border-radius: 8px; */
          /* padding: 5px 10px; */
          border-collapse: collapse;
          thead {
            text-align: center;
            font-weight: bold;
          }
          tr,
          td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
          }
          tr:hover {
            background-color: #d6eeee;
          }
        }
      }

      .user-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: 3.5rem auto;
      }

      .user-form label {
        display: flex;
        flex-direction: column;
        font-weight: bold;
      }

      .user-form input[type="text"],
      .user-form input[type="number"],
      .user-form input[type="email"] {
        padding: 0.8rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        margin-top: 0.5rem;
      }

      .user-form input[type="radio"] {
        margin-right: 0.5rem;
      }

      .gender-group {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .gender-group span {
        font-weight: bold;
      }

      .submit-btn {
        padding: 0.8rem 1.5rem;
        background: #4caf50;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      .submit-btn:hover {
        background: #45a049;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="upper-part">
        <h1>Users List</h1>
        <div>
          <form action="/users" method="post" class="user-form">
            <label for="first_name">
              First Name:
              <input type="text" id="first_name" name="first_name" required />
            </label>

            <label for="last_name">
              Last Name:
              <input type="text" id="last_name" name="last_name" required />
            </label>

            <div class="gender-group">
              <span>Gender:</span>

              <label for="male"
                >Male
                <input
                  type="radio"
                  id="male"
                  name="gender"
                  value="male"
                  required
              /></label>

              <label for="female"
                >Female
                <input
                  type="radio"
                  id="female"
                  name="gender"
                  value="female"
                  required
              /></label>
            </div>

            <label for="age">
              Age:
              <input
                type="number"
                id="age"
                name="age"
                min="1"
                max="120"
                required
              />
            </label>

            <label for="country">
              Country:
              <input type="text" id="country" name="country" required />
            </label>

            <label for="mail">
              Email:
              <input type="email" id="mail" name="mail" required />
            </label>

            <button type="submit" class="submit-btn">Add User</button>
          </form>
        </div>
        <ul>
          <li>
            <p><span><%=usersNumber%></span> User</p>
          </li>
          <li>
            <p>From<span> <%=countryNumber%> Country</span></p>
          </li>
        </ul>
      </div>
      <div class="users-box">
        <table>
          <thead>
            <tr>
              <td>First Name</td>
              <td>Last Name</td>
              <td>Gender</td>
              <td>Age</td>
              <td>Country</td>
              <td>Mail</td>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.gender%></td>
              <td><%= user.age %></td>
              <td><%= user.country %></td>
              <td><%= user.mail %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
